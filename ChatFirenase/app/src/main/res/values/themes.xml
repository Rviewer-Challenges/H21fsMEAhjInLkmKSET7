<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatFirebase" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0085D3</item>
        <item name="colorPrimaryVariant">#00090C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#03A9F4</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.NavigationKotlin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.NavigationKotlin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryVariant">#1C1C1C</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.RoomChat" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryVariant">@color/gris_oscuro</item>
        <item name="colorSecondary">#00B0FF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>